{% extends 'form_div_layout.html.twig' %}

{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_label(form, label|default(null)) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}


{% block form_label %}
{% spaceless %}
    {% set label_attr = attr|merge({'class': attr.class|default('') ~ ' control-label'}) %}
    {{ parent() }}
{% endspaceless %}
{% endblock %}
